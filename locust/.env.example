# Base API host is provided to Locust via --host flag or LOCUST_HOST env
API_PREFIX=/api/v1

# Authentication (required)
LOCUST_USERNAME=admin@example.com
LOCUST_PASSWORD=change_me

# Optional API key header for endpoints requiring X-API-KEY
API_KEY=

# Endpoint list files (relative to this directory)
TARGET_LIST_FILE=target_endpoints.txt
MIXED_LIST_FILE=mixed_endpoints.txt

# User wait time bounds (seconds)
LOCUST_WAIT_MIN=0.05
LOCUST_WAIT_MAX=0.2

# Optional step load shape
USE_SHAPE=0
STEP_TIME=30
STEP_USERS=25
SPAWN_RATE=10
TIME_LIMIT=600
